<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% block title %}Favr{% endblock %}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/app.css') }}" charset="utf-8">
    <script src="{{ url_for('static', filename='js/main-debug.js') }}"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Favr</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="{{ url_for('home')}}">Home</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <a type="button" class="btn btn-primary navbar-btn" href="{{ url_for('register') }}">Register</a>
          <a type="button" class="btn btn-default navbar-btn" href="{{ url_for('login') }}">Login</a>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
    </nav>

    <div class="container">
      {% block body %}{% endblock %}

      <hr>

      <!-- Footer -->
      <footer>
          <div class="row">
              <div class="col-lg-12">
                  <p>Copyright &copy; TeamFavr 2016</p>
              </div>
          </div>
      </footer>
    </div> <!-- /container -->
  </body>
</html>
